<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="miTema" parent="AppTheme" >
       <!-- <item name="android:background">@color/colorPrimary</item> -->
        <item name="android:textColor">#050505</item>
        <item name="android:textColorPrimary">#efefef</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#333b3b3b</item>
    </style>

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    </resources>
