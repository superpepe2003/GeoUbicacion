<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">false</item>-->

    </style>

    <style name="miTema" parent="AppTheme" >
       <!-- <item name="android:background">@color/colorPrimary</item> -->
        <item name="android:textColor">#f5f5f5</item>
        <item name="android:textColorPrimary">#efefef</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#333b3b3b</item>
    </style>

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="boton">
        <item name="android:background">@drawable/botones</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/min_boton_ancho</item>
        <item name="android:textColor">@color/foreGround</item>
    </style>

    <style name="botonInvertido" parent="boton">
        <item name="android:background">@drawable/botonesinvertido</item>
    </style>

    <style name="WallSearchView" parent="miTema">
        ...
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">#FFffffff</item>
    </style>

    </resources>
